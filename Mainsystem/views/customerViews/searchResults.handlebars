<div class="container my-5">
  <h1 class="text-center mb-4">Kết quả tìm kiếm cho "{{query}}"</h1>

  {{#if products.length}}
  <div class="row">
    {{#each products}}
    <div class="col-md-3 mb-4">
      <div class="card h-100 text-center">
        <img src="{{image}}" alt="{{product_name}}" style="width: 100%; height: auto;">

        <div class="card-body">
          <h5 class="card-title">{{product_name}}</h5>
          <p class="card-text">Giá: {{formatCurrency price}}</p>
          <a href="/product/{{product_id}}" class="btn btn-success">Xem chi tiết</a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>

  <!-- Phân trang -->
  <div class="d-flex justify-content-center mt-4">
    <nav aria-label="Page navigation">
      <ul class="pagination">
        {{#if (gt currentPage 1)}}
        <li class="page-item">
          <a class="page-link" href="/search?q={{query}}&page={{subtract currentPage 1}}" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
          </a>
        </li>
        {{/if}}

        {{#each (range 1 totalPages)}}
        <li class="page-item {{#if (eq this ../currentPage)}}active{{/if}}">
          <a class="page-link" href="/search?q={{../query}}&page={{this}}">{{this}}</a>
        </li>
        {{/each}}

        {{#if (lt currentPage totalPages)}}
        <li class="page-item">
          <a class="page-link" href="/search?q={{query}}&page={{add currentPage 1}}" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
          </a>
        </li>
        {{/if}}
      </ul>
    </nav>
  </div>
  {{else}}
  <p class="text-center text-danger">Không tìm thấy sản phẩm nào</p>
  {{/if}}

  <div class="text-center mt-4">
    <a href="/{{role}}" class="btn btn-secondary">Quay lại danh mục</a>
  </div>
</div>
