<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title text-center">Account Details</h3>
        </div>
        <div class="card-body">
            {{#if detail}}
            <div class="row mb-3">
                <div class="col-md-4"><strong>Name:</strong></div>
                <div class="col-md-8">{{detail.name}}</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4"><strong>Email:</strong></div>
                <div class="col-md-8">{{detail.email}}</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4"><strong>Role:</strong></div>
                <div class="col-md-8">{{detail.role}}</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4"><strong>Created At:</strong></div>
                <div class="col-md-8">{{detail.created_at}}</div>
            </div>
            {{else}}
            <div class="alert alert-warning text-center" role="alert">
                No details found for this user.
            </div>
            {{/if}}
        </div>
        <div class="card-footer text-center">
            <a href="/admin/accounts" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Accounts
            </a>
        </div>
    </div>
</div>