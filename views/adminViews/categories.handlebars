<header class="bg-success text-white text-center py-4">
    <h1 class="display-6 fw-bold">Quản lý Category và Product</h1>
</header>

<main class="container my-5">
    <!-- Danh sách Category -->
    <section>
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="text-primary">Danh sách Category</h2>
            <!-- Nút thêm danh mục -->
            <button class="btn btn-success shadow-sm px-3" data-bs-toggle="modal" data-bs-target="#addCategoryModal">
                <i class="fas fa-plus"></i> Thêm Danh mục
            </button>
        </div>

        <!-- Modal thêm danh mục -->
        <div class="modal fade" id="addCategoryModal" tabindex="-1" aria-labelledby="addCategoryLabel"
            aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header bg-primary text-white">
                        <h5 class="modal-title" id="addCategoryLabel">Thêm Danh mục mới</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form action="/admin/categories/addCategory" method="POST">
                        <div class="modal-body">
                            <div class="mb-3">
                                <label for="categoryName" class="form-label">Tên danh mục</label>
                                <input type="text" id="categoryName" name="name" class="form-control"
                                    placeholder="Nhập tên danh mục" required>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">Thêm</button>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        {{#if categories.length}}
        <div class="accordion" id="categoryAccordion">
            {{#each categories}}
            <div class="accordion-item">
                <h2 class="accordion-header" id="heading{{id}}">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                        data-bs-target="#collapse{{id}}" aria-expanded="false" aria-controls="collapse{{id}}">
                        {{name}}
                    </button>
                </h2>
                <div id="collapse{{id}}" class="accordion-collapse collapse" aria-labelledby="heading{{id}}"
                    data-bs-parent="#categoryAccordion">
                    <div class="accordion-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <!-- Nút xóa danh mục -->
                            <form action="/admin/categories/deleteCategory/{{id}}" method="POST"
                                onsubmit="return confirm('Bạn có chắc chắn muốn xóa danh mục này?');">
                                <button type="submit" class="btn btn-danger btn-sm shadow-sm">Xóa Danh mục</button>
                            </form>
                            <!-- Thêm sản phẩm -->
                            <a href="/admin/categories/addProduct/{{id}}" class="btn btn-primary btn-sm shadow-sm">
                                <i class="fas fa-plus"></i> Thêm Sản phẩm
                            </a>
                        </div>

                        <!-- Hiển thị danh sách Product thuộc Category -->
                        <h5 class="mb-3">Sản phẩm:</h5>
                        {{#if this.products.length}}
                        <div class="row row-cols-1 row-cols-md-3 g-4">
                            {{#each this.products}}
                            <div class="col">
                                <div class="card h-100 shadow-sm">
                                    <img src="{{this.image}}" class="card-img-top" alt="Product Image"
                                        style="height: 200px; object-fit: cover;">
                                    <div class="card-body">
                                        <h5 class="card-title">{{this.product_name}}</h5>
                                        <p class="card-text"><strong>Giá:</strong> {{this.price}} VND</p>

                                        <!-- Input tải ảnh -->
                                        <form action="/admin/categories/uploadImage/{{this.product_id}}" method="POST"
                                            enctype="multipart/form-data" class="mt-3">
                                            <label for="productImage{{this.product_id}}" class="form-label">Tải ảnh
                                                lên:</label>
                                            <input type="file" id="productImage{{this.product_id}}" name="productImage"
                                                class="form-control mb-2">
                                            <button type="submit" class="btn btn-primary btn-sm">Tải lên</button>
                                        </form>

                                        <!-- Sửa và xóa sản phẩm -->
                                        <div class="d-grid gap-2 mt-3">
                                            <a href="/admin/categories/editProduct/{{this.product_id}}"
                                                class="btn btn-warning btn-sm">Sửa</a>
                                            <form action="/admin/categories/deleteProduct/{{this.product_id}}"
                                                method="POST" onsubmit="return confirm('Bạn có chắc chắn muốn xóa?');">
                                                <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
                                            </form>
                                            <a href="/admin/categories/product/{{this.product_id}}"
                                                class="btn btn-info btn-sm">Xem chi tiết</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{/each}}
                        </div>
                        {{else}}
                        <p class="text-muted">Không có sản phẩm nào trong Category này.</p>
                        {{/if}}
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{else}}
        <p class="text-muted">Không có Category nào.</p>
        {{/if}}
        <a href="/admin" class="btn btn-secondary mt-4">Quay lại</a>
    </section>
</main>

<style>
    .form-control:hover,
    .form-control:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 8px rgba(13, 110, 253, 0.5);
    }

    .btn-primary:hover,
    .btn-success:hover,
    .btn-danger:hover,
    .btn-warning:hover,
    .btn-info:hover {
        transform: scale(1.05);
        transition: all 0.2s ease-in-out;
    }

    .accordion-button {
        font-weight: bold;
    }

    .accordion-button:focus {
        box-shadow: 0 0 8px rgba(13, 110, 253, 0.5);
    }

    .btn-shadow-sm {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
</style>