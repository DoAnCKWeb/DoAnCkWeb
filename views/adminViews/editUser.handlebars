<div class="container mt-5">
    <h2>Edit User</h2>
    <form action="/admin/edit/{{user.id}}" method="POST">
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" id="name" name="name" value="{{user.name}}" required>
        </div>

        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" name="email" value="{{user.email}}" required>
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password" name="password" value="{{user.password}}">
        </div>

        <!-- Thêm trường role -->
        <div class="mb-3">
            <label for="role" class="form-label">Role</label>
            <select class="form-control" id="role" name="role">
                <option value="admin" {{#if (eq user.role "admin" )}}selected{{/if}}>Admin</option>
                <option value="user" {{#if (eq user.role "user" )}}selected{{/if}}>User</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Update</button>
        <a href="/admin/accounts" class="btn btn-secondary">Cancel</a>
    </form>
</div>