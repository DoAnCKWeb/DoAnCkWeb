<header class="bg-success text-white text-center py-4">
    <h1>Chỉnh sửa Sản phẩm</h1>
</header>

<main class="container my-5">
    <h2 class="text-primary">Chỉnh sửa Sản phẩm {{product.product_name}}</h2>

    <!-- Form chỉnh sửa sản phẩm -->
    <form action="/admin/categories/editProduct/{{product.product_id}}" method="POST" class="row g-3">
        <!-- Thông tin sản phẩm -->
        <div class="col-md-6">
            <label for="productName" class="form-label">Tên sản phẩm:</label>
            <input type="text" id="productName" name="product_name" class="form-control" value="{{product.product_name}}" required>
        </div>
        <div class="col-md-6">
            <label for="productPrice" class="form-label">Giá sản phẩm:</label>
            <input type="number" id="productPrice" name="price" class="form-control" value="{{product.price}}" required>
        </div>
        <div class="col-md-6">
            <label for="storageCapacity" class="form-label">Dung lượng lưu trữ:</label>
            <input type="text" id="storageCapacity" name="storage_capacity" class="form-control" value="{{product.storage_capacity}}">
        </div>
        <div class="col-md-6">
            <label for="operatingSystem" class="form-label">Hệ điều hành:</label>
            <input type="text" id="operatingSystem" name="operating_system" class="form-control" value="{{product.operating_system}}">
        </div>
        <div class="col-md-6">
            <label for="screenSize" class="form-label">Kích thước màn hình:</label>
            <input type="text" id="screenSize" name="screen_size" class="form-control" value="{{product.screen_size}}">
        </div>
        <div class="col-md-6">
            <label for="weight" class="form-label">Trọng lượng:</label>
            <input type="number" id="weight" name="weight" class="form-control" value="{{product.weight}}">
        </div>
        <div class="col-md-6">
            <label for="releaseYear" class="form-label">Năm phát hành:</label>
            <input type="number" id="releaseYear" name="release_year" class="form-control" value="{{product.release_year}}">
        </div>

        <!-- Cập nhật màu sắc -->
        <div class="col-md-12">
            <h4 class="mt-4">Cập nhật Màu Sắc</h4>
            <div id="colorContainer">
                {{#each product.colors}}
                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Tên màu:</label>
                        <input type="text" name="colors[{{@index}}][name]" class="form-control" value="{{this.color_name}}" readonly>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Số lượng:</label>
                        <input type="number" name="colors[{{@index}}][stock]" class="form-control" value="{{this.stock}}" required>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>


        <!-- Nút cập nhật -->
        <div class="col-md-12">
            <button type="submit" class="btn btn-warning w-100">Cập nhật sản phẩm</button>
        </div>
    </form>
</main>
