<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chart Example</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>

<body>
    <h1>Revenue by Category</h1>

    <canvas id="myChart" width="400" height="200"></canvas>
    <a href="/admin" class="btn btn-secondary mt-4">Quay lại</a>


    <script>
        // Nhúng dữ liệu từ server vào JavaScript
        const categories = {{{ categories }}};
        const revenues = {{{ revenues }}};

        const ctx = document.getElementById('myChart').getContext('2d');
        const myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: categories, // Danh sách các danh mục
                datasets: [{
                    label: 'Revenue',
                    data: revenues,  // Doanh thu tương ứng
                    backgroundColor: 'rgba(54, 162, 235, 0.2)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
</body>

</html>