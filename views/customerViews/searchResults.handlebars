<div class="container my-5">
  <h1 class="text-center mb-4">Kết quả tìm kiếm cho "{{query}}"</h1>

  {{#if products.length}}
  <div class="row">
    {{#each products}}
    <div class="col-md-3 mb-4">
      <div class="card h-100 text-center">
        <img src="{{image}}" class="card-img-top" alt="{{product_name}}" style="height: 200px; object-fit: cover;">
        <div class="card-body">
          <h5 class="card-title">{{product_name}}</h5>
          <p class="card-text">Giá: {{price}} VND</p>
          <a href="/product/{{product_id}}" class="btn btn-success">Xem chi tiết</a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  {{else}}
  <p class="text-center text-danger">Không tìm thấy sản phẩm nào</p>
  {{/if}}

  <div class="text-center mt-4">
    <a href="/categories" class="btn btn-secondary">Quay lại danh mục</a>
  </div>
</div>
