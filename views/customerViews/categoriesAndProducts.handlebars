{{#if message}}
<div class="alert alert-danger" role="alert">
  {{message}}
</div>
{{/if}}
<div class="container my-5">

  <!-- Thanh tìm kiếm -->
  <div class="row mb-4">
    <div class="col-md-12">
      <form method="GET" action="/search" class="d-flex">
        <input
          type="text"
          name="q"
          class="form-control me-2"
          placeholder="Tìm kiếm sản phẩm..."
          value="{{query}}">
        <button type="submit" class="btn btn-primary">Tìm kiếm</button>
      </form>
    </div>
  </div>

  
  <!-- Hiển thị danh mục -->
  <h1 class="text-center mb-4">Danh mục sản phẩm</h1>
  <div class="row mb-4">
    {{#each categories}}
    <div class="col-md-4 mb-4">
      <div class="card text-center">
        <div class="card-body">
          <h5 class="card-title">{{name}}</h5>
          <a href="/categories/{{id}}/products" class="btn btn-primary">Xem sản phẩm</a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>

  <!-- Hiển thị sản phẩm -->
  <h1 class="text-center mb-4">Tất cả sản phẩm</h1>
  <div class="row">
    {{#each products}}
    <div class="col-md-3 mb-4">
      <div class="card h-100 text-center">
        <img src="{{image}}" class="card-img-top" alt="{{product_name}}" style="height: 200px; object-fit: cover;">
        <div class="card-body">
          <h5 class="card-title">{{product_name}}</h5>
          <p class="card-text">Giá: {{price}} VND</p>
          <p class="text-muted">Danh mục: {{category_name}}</p>
          <button onclick="addToCart({{product_id}}, 1)" class="btn btn-primary">Thêm vào giỏ hàng</button>

        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>
